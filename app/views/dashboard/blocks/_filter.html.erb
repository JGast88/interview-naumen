
<header id="filter" class="row mb-3">
	<div class="col">
        <div class="card">
            <div class="card-header">
                <%= t 'blocks.filter.title' %>
            </div>
            <div class="card-body">
                <%= form_with url: dashboard_path, method: :get do |f| %>
                    <div class="input-group">
                        <%= f.date_field :date, value: @date, class: 'form-control' %>
                        <div class="input-group-append">
                            <%= f.submit (t 'blocks.filter.title'), class: 'btn btn-outline-primary' %>
                            <%= link_to (t 'blocks.filter.reset'), dashboard_path, class: 'btn btn-outline-danger' %>
                        </div>
                    </div>	
                <% end %>
            </div>
        </div>	
	</div>
</header>