<p id="notice"><%= notice %></p>

<h1>
  Departments
  <%= link_to (t '.new'), new_department_path, class: 'btn btn-success' %>
</h1>


<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Parent</th>
      <th>Created at</th>
      <th>Disbanded at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.parent&.name %></td>
        <td><%= department.created_at %></td>
        <td><%= department.disbanded_at %></td>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% render @departments %>
<%= render 'departments/departments' %>
