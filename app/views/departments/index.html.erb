<p id="notice"><%= notice %></p>

<h1>
  <%= t 'xx.departments' %>
  <%= link_to (t 'xx.new'), new_department_path, class: 'btn btn-success' %>
</h1>


<table class="table">
  <thead>
    <tr>
      <th><%= t 'model.department.attributes.name' %></th>
      <th><%= t 'model.department.attributes.parent' %></th>
      <th><%= t 'model.department.attributes.created_at' %></th>
      <th><%= t 'model.department.attributes.disbanded_at' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.parent&.name %></td>
        <td><%= department.created_at %></td>
        <td><%= department.disbanded_at %></td>
        <td><%= link_to 'Show', department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>