<p id="notice"><%= notice %></p>

<h1>
  <%= t 'model.person.many' %>
  <%= link_to (t 'xx.new'), new_person_path, class: 'btn btn-success' %>
</h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t 'xx.fullname' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.fullname %></td>
        <td><%= link_to (t 'xx.show'), person %></td>
        <td><%= link_to (t 'xx.edit'), edit_person_path(person) %></td>
        <td><%= link_to (t 'xx.destroy'), person, method: :delete, data: { confirm: (t 'xx.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

