<div class="card">
  <div class="card-header">
      <h3 class="mb-0">Assign person to department</h3>
  </div>
  <div class="card-body">
    <%= form_with(model: working_period) do |form| %>
      <%= render '/shared/errors', object: working_period %>

      <div class="field">
        <%= form.label :start_at %>
        <%= form.date_field :start_at, required: true %>
      </div>

      <div class="field">
        <%= form.label :end_at %>
        <%= form.date_field :end_at %>
      </div>

      <div class="field">
        <%= form.label :department_id %>
        <%= form.select :department_id, options_from_collection_for_select(@departments, "id", "name", selected: params[:department_id]) %>
      </div>
      
      <div class="field">
        <%= form.label :person_id %>
        <%= form.select :person_id, options_from_collection_for_select(@people, "id", "fullname", selected: params[:person_id]) %>
      </div>

      <div class="actions">
        <%= form.submit 'Assign', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>