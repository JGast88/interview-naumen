<h3>Assign person to department</h3>
<%= form_with(model: working_period) do |form| %>
  <%= render '/shared/errors', object: working_period %>

  <div class="field">
    <%= form.label :start_at %>
    <%= form.date_field :start_at, required: true %>
  </div>

  <div class="field">
    <%= form.label :end_at %>
    <%= form.date_field :end_at, required: true %>
  </div>

  <div class="field">
    <%= form.label :department_id %>
    <%= form.select :department_id, options_from_collection_for_select(@departments, "id", "name") %>
  </div>
  
  <div class="field">
    <%= form.label :person_id %>
    <%= form.select :person_id, options_from_collection_for_select(@people, "id", "fullname") %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
